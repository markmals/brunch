---
import CalendarDays from "astro-heroicons/outline/CalendarDays.astro"
import ChevronRight from "astro-heroicons/outline/ChevronRight.astro"
import MapPin from "astro-heroicons/outline/MapPin.astro"
import Plus from "astro-heroicons/outline/Plus.astro"
import User from "astro-heroicons/outline/User.astro"

import Card from "./Card.astro"
import Map from "./Map.astro"

export interface Props {
    mapboxToken: string
    mapLink: string
}

let { mapboxToken, mapLink } = Astro.props
---

<div class="flex flex-col gap-6">
    <Card>
        <div class="flex w-full flex-col gap-4 divide-y divide-gray-900/10 py-4">
            <div class="flex flex-row items-center gap-6 px-4 text-gray-500">
                <User class="h-5 w-5 text-gray-500" />
                <span>
                    Hosted by <strong class="text-black">Mark</strong>
                </span>
            </div>
            <div class="flex flex-row items-center gap-6 px-4 pt-4 text-gray-500">
                <CalendarDays class="h-5 w-5 text-gray-500" />
                <span>
                    <strong class="text-black">
                        Sunday, April 16<sup>th</sup>, 2023
                    </strong>
                    <span class="flex flex-row items-center gap-2">
                        <span class="flex flex-row items-center gap-1 text-black">
                            10:30 AM <ChevronRight class="h-3 w-3 text-gray-500" />{" "}
                            1:00 PM
                        </span>{" "}
                        (2.5 hr)
                    </span>
                </span>
            </div>
            <div class="flex flex-col items-start">
                <div class="flex flex-row items-center gap-6 p-4 text-gray-500">
                    <MapPin class="h-5 w-5 text-gray-500" />
                    <span class="flex flex-col">
                        <a href={mapLink}>
                            <strong class="text-black hover:text-indigo-700">
                                1416 Berene Ave.
                            </strong>
                        </a>
                        <span>Austin, TX 78721</span>
                    </span>
                </div>
                <a class="ml-14 h-full w-10/12" href={mapLink}>
                    <Map token={mapboxToken} />
                </a>
            </div>
        </div>
    </Card>

    <div class="flex flex-row gap-6">
        <!-- TODO: Download iCal or Google Cal event -->
        <button
            class="flex w-full flex-row items-center justify-center gap-2 bg-white py-2.5 px-3.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:rounded-md"
            type="button"
        >
            <Plus class="h-6 w-6 text-indigo-500" />
            Add to Calendar
        </button>
    </div>
</div>
